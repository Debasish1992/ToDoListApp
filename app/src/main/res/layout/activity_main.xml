<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="TaskModel"
            type="com.debasish.todolist.entity.TaskModel" />

        <variable
            name="TaskListViewModel"
            type="com.debasish.todolist.viewmodel.TaskListViewModel" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TaskListScreen">

    <com.debasish.todolist.utils.CustomEditText
        android:id="@+id/etSearchBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_stroke_grey"
        android:backgroundTint="@color/white"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ12345678901234567890#_- "
        android:drawablePadding="15dp"
        android:elevation="2dp"
        android:hint="@string/search_todo"
        android:imeOptions="actionSearch"
        android:onTextChanged="@{TaskListViewModel.onTextChanged}"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/dark_bg"
        android:textColorHint="@color/light_grey_blue"
        android:visibility="visible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/md_grey_200"
        android:id="@+id/rvTaskList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etSearchBar"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>

</layout>